@model BusinessObjects.DTO.OrdersDashboardViewModel

<div class="container mt-4">
    <h2>📦 Quản lý đơn hàng</h2>

    @* Đơn hàng của tôi (customer) *@
    @if (Model.MyOrders.Any())
    {
        <h4>👤 Đơn hàng của tôi</h4>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Mã đơn</th>
                    <th>Xe</th>
                    <th>Số tiền</th>
                    <th>Trạng thái</th>
                    <th>Thanh toán</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model.MyOrders)
                {
                    <tr>
                        <td>@order.OrderNumber</td>
                        <td>@order.VehicleName</td>
                        <td>@order.TotalAmount.ToString("N0") đ</td>
                        <td><span class="badge bg-info">@order.Status</span></td>
                        <td>
                            @if (order.PaymentStatus == "Paid")
                            {
                                <span class="badge bg-success">Đã thanh toán</span>
                            }
                            else
                            {
                                <form asp-action="CompletePayment" method="post" class="d-inline">
                                    <input type="hidden" name="orderId" value="@order.Id" />
                                    <input type="hidden" name="customerId" value="@order.CustomerId" />
                                    <button type="submit" class="btn btn-sm btn-success">Thanh toán</button>
                                </form>
                            }
                        </td>
                        <td>
                            <a class="btn btn-sm btn-primary"
                               href="@Url.Action("Details", "Order", new { id = order.Id })">Chi tiết</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    @* Đơn hàng chờ xác nhận (staff/admin/dealer) *@
    @if (Model.PendingOrders.Any())
    {
        <h4>🕒 Đơn hàng chờ xác nhận</h4>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Mã đơn</th>
                    <th>Khách hàng</th>
                    <th>Xe</th>
                    <th>Số tiền</th>
                    <th>Trạng thái</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model.PendingOrders)
                {
                    <tr>
                        <td>@order.OrderNumber</td>
                        <td>@order.CustomerName</td>
                        <td>@order.VehicleName</td>
                        <td>@order.TotalAmount.ToString("N0") đ</td>
                        <td><span class="badge bg-warning">@order.Status</span></td>
                        <td>
                            <a class="btn btn-sm btn-primary"
                               href="@Url.Action("Details", "Order", new { id = order.Id })">Chi tiết</a>
                            <form asp-action="ConfirmOrder" method="post" class="d-inline">
                                <input type="hidden" name="orderId" value="@order.Id" />
                                <input type="hidden" name="staffId" value="@order.CustomerId" /> @* TODO: đổi staffId = userId hiện tại *@
                                <button type="submit" class="btn btn-sm btn-success">Xác nhận</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
