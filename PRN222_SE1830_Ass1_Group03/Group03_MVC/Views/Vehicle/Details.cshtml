@model BusinessObjects.DTO.VehicleDTO

@{
    ViewData["Title"] = "Chi tiết xe";
    var userRole = ViewBag.UserRole as string;
    var canManage = userRole == "evm_staff" || userRole == "dealer_manager";
    var isCustomer = userRole == "customer";
    var isLoggedIn = !string.IsNullOrEmpty(Context.Session.GetString("UserId"));
}

<div class="container py-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0 fs-4">
                        <i class="bi bi-car-front me-2"></i>Chi tiết xe: @Model.Name
                    </h4>
                    <div class="d-flex gap-2">
                        @if (isCustomer && Model.StockQuantity > 0)
                        {
                            <a asp-controller="CustomerTestDrive" asp-action="BookAppointment" 
                               asp-route-vehicleId="@Model.Id" 
                               class="btn btn-success fs-6">
                                <i class="bi bi-calendar-heart me-2"></i>Đặt lịch lái thử
                            </a>
                        }
                        @if (canManage)
                        {
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning fs-6">
                                <i class="bi bi-pencil me-2"></i>Chỉnh sửa
                            </a>
                        }
                        <a asp-action="Index" class="btn btn-secondary fs-6">
                            <i class="bi bi-arrow-left me-2"></i>Quay lại
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            @if (!string.IsNullOrEmpty(Model.Images))
                            {
                                var images = Model.Images.Split(',');
                                <div id="vehicleCarousel" class="carousel slide" data-bs-ride="carousel">
                                    <div class="carousel-inner">
                                        @for (int i = 0; i < images.Length; i++)
                                        {
                                            <div class="carousel-item @(i == 0 ? "active" : "")">
                                                <img src="@images[i]" class="d-block w-100" alt="@Model.Name" style="height: 300px; object-fit: cover;">
                                            </div>
                                        }
                                    </div>
                                    @if (images.Length > 1)
                                    {
                                        <button class="carousel-control-prev" type="button" data-bs-target="#vehicleCarousel" data-bs-slide="prev">
                                            <span class="carousel-control-prev-icon"></span>
                                        </button>
                                        <button class="carousel-control-next" type="button" data-bs-target="#vehicleCarousel" data-bs-slide="next">
                                            <span class="carousel-control-next-icon"></span>
                                        </button>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="bg-light d-flex align-items-center justify-content-center rounded" style="height: 300px;">
                                    <i class="bi bi-car-front fs-1 text-muted"></i>
                                </div>
                            }
                        </div>
                        <div class="col-md-6">
                            <table class="table fs-6">
                                <tr>
                                    <td class="fw-medium">Tên xe:</td>
                                    <td>@Model.Name</td>
                                </tr>
                                <tr>
                                    <td class="fw-medium">Thương hiệu:</td>
                                    <td>@Model.Brand</td>
                                </tr>
                                <tr>
                                    <td class="fw-medium">Model:</td>
                                    <td>@Model.Model</td>
                                </tr>
                                <tr>
                                    <td class="fw-medium">Năm sản xuất:</td>
                                    <td>@Model.Year</td>
                                </tr>
                                <tr>
                                    <td class="fw-medium">Giá:</td>
                                    <td class="text-danger fw-bold fs-6">@Model.Price.ToString("C")</td>
                                </tr>
                                <tr>
                                    <td class="fw-medium">Số lượng tồn kho:</td>
                                    <td>
                                        @if (Model.StockQuantity > 0)
                                        {
                                            <span class="badge bg-success fs-6">@Model.StockQuantity xe có sẵn</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger fs-6">Hết hàng</span>
                                        }
                                    </td>
                                </tr>
                            </table>

                            @* Customer Action Panel *@
                            @if (isCustomer)
                            {
                                <div class="card border-success mt-3">
                                    <div class="card-header bg-success text-white">
                                        <h6 class="mb-0 fs-6 fw-medium">
                                            <i class="bi bi-person-heart me-2"></i>Dành cho khách hàng
                                        </h6>
                                    </div>
                                    <div class="card-body">
                                        @if (Model.StockQuantity > 0)
                                        {
                                            <p class="text-success mb-2 fs-6">
                                                <i class="bi bi-check-circle me-2"></i>Xe này có sẵn để lái thử!
                                            </p>
                                            <a asp-controller="CustomerTestDrive" asp-action="BookAppointment"
                                               asp-route-vehicleId="@Model.Id"
                                               class="btn btn-success w-100 fs-6">
                                                <i class="bi bi-calendar-heart me-2"></i>Đặt lịch lái thử ngay
                                            </a>
                                        }
                                        else
                                        {
                                            <p class="text-muted mb-2 fs-6">
                                                <i class="bi bi-x-circle me-2"></i>Xe này hiện tại không có sẵn để lái thử.
                                            </p>
                                            <button class="btn btn-secondary w-100 fs-6" disabled>
                                                <i class="bi bi-calendar-x me-2"></i>Không thể đặt lịch
                                            </button>
                                        }
                                    </div>
                                </div>
                            }
                            @if (!isLoggedIn)
                            {
                                <div class="card border-info mt-3">
                                    <div class="card-header bg-info text-white">
                                        <h6 class="mb-0 fs-6 fw-medium">
                                            <i class="bi bi-info-circle me-2"></i>Muốn lái thử?
                                        </h6>
                                    </div>
                                    <div class="card-body">
                                        <p class="mb-2 fs-6">Đăng nhập để đặt lịch hẹn lái thử xe này!</p>
                                        <a asp-controller="Account" asp-action="Login" class="btn btn-primary w-100 fs-6">
                                            <i class="bi bi-box-arrow-in-right me-2"></i>Đăng nhập ngay
                                        </a>
                                    </div>
                                </div>
                            }

                            @* Hiển thị thông báo đặt hàng *@
                            @if (TempData["ErrorMessage"] != null)
                            {
                                <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
                            }
                            @if (TempData["SuccessMessage"] != null)
                            {
                                <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                            }

                            @* Nút đăng ký mua xe - chỉ cho khách hàng *@
                            @{
                                var role = Context.Session.GetString("Role");
                                var customerId = Context.Session.GetString("UserId");
                            }
                            @if (role == "customer")
                            {
                                <form asp-action="CreateOrder" asp-controller="Order" method="post">
                                    @Html.AntiForgeryToken()

                                    <input type="hidden" name="VehicleId" value="@Model.Id" />

                                    <div class="form-group">
                                        <label>Chọn đại lý</label>
                                        <select name="DealerId" class="form-control" required>
                                            <option value="">-- Chọn đại lý --</option>
                                            @foreach (var dealer in ViewBag.Dealers as List<BusinessObjects.Models.Dealer>)
                                            {
                                                <option value="@dealer.Id">@dealer.Name</option>
                                            }
                                        </select>
                                    </div>

                                    <div class="form-group mt-2">
                                        <label>Ghi chú</label>
                                        <textarea name="Notes" class="form-control"></textarea>
                                    </div>

                                    <button type="submit" class="btn btn-primary mt-3">Đặt xe</button>
                                </form>
                            }
                        </div>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="mt-4">
                            <h5 class="fs-5 fw-medium mb-3">Mô tả:</h5>
                            <p class="fs-6 lh-base">@Model.Description</p>
                        </div>
                    }
                    
                    @if (!string.IsNullOrEmpty(Model.Specifications))
                    {
                        <div class="mt-4">
                            <h5 class="fs-5 fw-medium mb-3">Thông số kỹ thuật:</h5>
                            <p class="fs-6 lh-base">@Model.Specifications</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>