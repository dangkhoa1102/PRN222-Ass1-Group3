@model BusinessObjects.DTO.VehicleDTO

@{
    ViewData["Title"] = "Delete Vehicle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Header -->
            <div class="d-flex align-items-center mb-4">
                <a asp-action="Index" class="btn btn-outline-secondary me-3">
                    <i class="fas fa-arrow-left"></i>
                </a>
                <div>
                    <h2 class="text-danger mb-0">
                        <i class="fas fa-trash-alt me-2"></i>Delete Vehicle
                    </h2>
                    <p class="text-muted mb-0">Permanently remove this vehicle from inventory</p>
                </div>
            </div>

            <!-- Warning Alert -->
            <div class="alert alert-danger d-flex align-items-center mb-4" role="alert">
                <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
                <div>
                    <h5 class="alert-heading mb-1">Warning: Permanent Action</h5>
                    <p class="mb-0">This action cannot be undone. The vehicle will be permanently removed from your inventory system.</p>
                </div>
            </div>

            <!-- Vehicle Details Card -->
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>Vehicle to be Deleted
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Vehicle Image -->
                        <div class="col-md-4">
                            @if (!string.IsNullOrEmpty(Model.Images))
                            {
                                <img src="@Model.Images.Split(',')[0].Trim()" class="img-fluid rounded" alt="@Model.Name" style="max-height: 250px; width: 100%; object-fit: cover;">
                            }
                            else
                            {
                                <div class="bg-light d-flex align-items-center justify-content-center rounded" style="height: 250px;">
                                    <i class="fas fa-car fa-4x text-muted"></i>
                                </div>
                            }
                        </div>

                        <!-- Vehicle Information -->
                        <div class="col-md-8">
                            <h4 class="text-primary mb-3">@Model.Name</h4>

                            <div class="row mb-3">
                                <div class="col-6">
                                    <strong>Brand:</strong>
                                    <p class="text-muted mb-1">@Model.Brand</p>
                                </div>
                                <div class="col-6">
                                    <strong>Model:</strong>
                                    <p class="text-muted mb-1">@Model.Model</p>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-6">
                                    <strong>Year:</strong>
                                    <p class="text-muted mb-1">@(Model.Year?.ToString() ?? "N/A")</p>
                                </div>
                                <div class="col-6">
                                    <strong>Price:</strong>
                                    <p class="text-success mb-1 fw-bold">@Model.Price.ToString("C")</p>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-6">
                                    <strong>Stock Quantity:</strong>
                                    <p class="text-muted mb-1">@Model.StockQuantity units</p>
                                </div>
                                <div class="col-6">
                                    <strong>Vehicle ID:</strong>
                                    <p class="text-muted mb-1"><small>@Model.Id</small></p>
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                <div class="mb-3">
                                    <strong>Description:</strong>
                                    <p class="text-muted mb-1">@Model.Description</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Confirmation Section -->
            <div class="card mt-4 border-danger">
                <div class="card-header bg-light border-danger">
                    <h5 class="card-title text-danger mb-0">
                        <i class="fas fa-check-circle me-2"></i>Confirm Deletion
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Delete" method="post" id="deleteForm">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.Id" />

                        <div class="d-flex justify-content-between">
                            <div>
                                <a asp-action="Index" class="btn btn-secondary me-2">
                                    <i class="fas fa-times me-2"></i>Cancel
                                </a>
                            </div>
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this vehicle? This action cannot be undone.')">
                                <i class="fas fa-trash-alt me-2"></i>Delete Vehicle
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>