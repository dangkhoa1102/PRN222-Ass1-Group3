@model BusinessObjects.DTO.CreateOrderRequest

<div class="card shadow-lg">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">
            <i class="fas fa-plus-circle"></i> Tạo đơn hàng mới
        </h4>
    </div>
    <div class="card-body">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle"></i> <strong>Thành công!</strong> @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle"></i> <strong>Lỗi!</strong> @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <form asp-controller="OrderOfStaff" asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <!-- Hiển thị lỗi chung -->
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <!-- Hidden fields -->
            <input type="hidden" asp-for="DealerId" value="@ViewBag.DealerId" />
            <input type="hidden" asp-for="StaffId" value="@ViewBag.CurrentStaffId" />

            <!-- Customer Info -->
            <div class="form-group mb-3">
                <label class="form-label fw-bold">Khách hàng</label>
                @if (ViewBag.CustomerId != null)
                {
                    <input type="hidden" asp-for="CustomerId" value="@ViewBag.CustomerId" />
                    <input type="text" class="form-control"
                           value="@ViewBag.CustomerName (@ViewBag.CustomerPhone)" readonly />
                }
                else
                {
                    <input asp-for="CustomerName" class="form-control" placeholder="Nhập tên khách hàng" required />
                    <span asp-validation-for="CustomerName" class="text-danger"></span>

                    <input asp-for="CustomerPhone" class="form-control mt-2" placeholder="Nhập số điện thoại" required />
                    <span asp-validation-for="CustomerPhone" class="text-danger"></span>
                }
            </div>

            <!-- Vehicle Selection -->
            <div class="mb-3">
                <label class="form-label fw-bold">
                    <i class="fas fa-car text-primary"></i> Xe điện <span class="text-danger">*</span>
                </label>
                <select asp-for="VehicleId" class="form-select" id="vehicleSelect" required>
                    <option value="">-- Chọn xe --</option>
                    @foreach (var v in ViewBag.Vehicles)
                    {
                        <option value="@v.Id" data-price="@v.Price">
                            @v.Name (@String.Format("{0:N0}", v.Price) ₫)
                        </option>
                    }
                </select>
                <span asp-validation-for="VehicleId" class="text-danger"></span>
            </div>

            <!-- Staff Info -->
            <div class="form-group mb-3">
                <label class="form-label fw-bold">Nhân viên phụ trách</label>
                <input type="text" class="form-control" value="@ViewBag.CurrentStaffName" readonly />
            </div>

            <!-- Total Amount -->
            <div class="mb-3">
                <label class="form-label fw-bold">
                    <i class="fas fa-money-bill-wave text-success"></i> Tổng tiền
                </label>
                <div class="input-group">
                    <span class="input-group-text">₫</span>
                    <input asp-for="TotalAmount" type="number" class="form-control"
                           id="TotalAmount"
                           placeholder="Tự động theo giá xe hoặc chỉnh tay"
                           step="1000" min="0" required />
                </div>
                <span asp-validation-for="TotalAmount" class="text-danger"></span>
            </div>

            <!-- Notes -->
            <div class="mb-3">
                <label class="form-label fw-bold">
                    <i class="fas fa-sticky-note text-warning"></i> Ghi chú
                </label>
                <textarea asp-for="Notes" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <!-- Buttons -->
            <div class="d-flex gap-2 justify-content-end">
                <a asp-controller="OrderOfStaff" asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Hủy
                </a>
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-check"></i> Tạo đơn hàng
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        $('#vehicleSelect').on('change', function () {
            var price = $(this).find('option:selected').data('price');
            if (price) {
                $('#TotalAmount').val(price);
            } else {
                $('#TotalAmount').val('');
            }
        });
    </script>
}