@model List<BusinessObjects.Models.TestDriveAppointment>

@{
    ViewData["Title"] = "Lịch hẹn lái thử của tôi";
}

<div class="container py-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="bi bi-calendar-check me-2"></i>Lịch hẹn lái thử của tôi
                    </h4>
                    <a asp-action="BookAppointment" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-2"></i>Đặt lịch hẹn mới
                    </a>
                </div>

                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (Model != null && Model.Any())
                    {
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <span class="text-muted">Hiển thị @Model.Count lịch hẹn</span>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Xe</th>
                                        <th>Đại lý</th>
                                        <th>Ngày hẹn</th>
                                        <th>Trạng thái</th>
                                        <th>Ghi chú</th>
                                        <th>Hành động</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var appointment in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    @if (!string.IsNullOrEmpty(appointment.Vehicle?.Images))
                                                    {
                                                        <img src="@appointment.Vehicle.Images.Split(',')[0].Trim()" 
                                                             class="rounded me-3" 
                                                             alt="@appointment.Vehicle.Name" 
                                                             style="width: 50px; height: 40px; object-fit: cover;">
                                                    }
                                                    else
                                                    {
                                                        <div class="bg-light rounded me-3 d-flex align-items-center justify-content-center" 
                                                             style="width: 50px; height: 40px;">
                                                            <i class="bi bi-car-front text-muted"></i>
                                                        </div>
                                                    }
                                                    <div>
                                                        <div class="fw-medium">@(appointment.Vehicle?.Name ?? "Không xác định")</div>
                                                        <small class="text-muted">@appointment.Vehicle?.Brand @appointment.Vehicle?.Model</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <div>
                                                    <div class="fw-medium">@(appointment.Dealer?.Name ?? "Không xác định")</div>
                                                    <small class="text-muted">@appointment.Dealer?.Address</small>
                                                </div>
                                            </td>
                                            <td>
                                                <div>
                                                    <div class="fw-medium">@appointment.AppointmentDate.ToString("dd/MM/yyyy")</div>
                                                    <small class="text-muted">@appointment.AppointmentDate.ToString("HH:mm")</small>
                                                </div>
                                            </td>
                                            <td>
                                                @switch (appointment.Status.ToLower())
                                                {
                                                    case "pending":
                                                        <span class="badge bg-warning text-dark">
                                                            <i class="bi bi-hourglass-split me-1"></i>Chờ xử lý
                                                        </span>
                                                        break;
                                                    case "confirmed":
                                                        <span class="badge bg-success">
                                                            <i class="bi bi-check-circle me-1"></i>Đã xác nhận
                                                        </span>
                                                        break;
                                                    case "cancelled":
                                                        <span class="badge bg-danger">
                                                            <i class="bi bi-x-circle me-1"></i>Đã hủy
                                                        </span>
                                                        break;
                                                    case "completed":
                                                        <span class="badge bg-info">
                                                            <i class="bi bi-check-all me-1"></i>Hoàn thành
                                                        </span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-secondary">@appointment.Status</span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                <span class="text-truncate" style="max-width: 150px;" title="@appointment.Notes">
                                                    @(string.IsNullOrEmpty(appointment.Notes) ? "Không có" : appointment.Notes)
                                                </span>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@appointment.Id" 
                                                       class="btn btn-outline-primary btn-sm">
                                                        <i class="bi bi-eye me-1"></i>Chi tiết
                                                    </a>
                                                    
                                                    @if (appointment.Status.ToLower() == "pending" || appointment.Status.ToLower() == "confirmed")
                                                    {
                                                        <button type="button" class="btn btn-outline-danger btn-sm" 
                                                                data-bs-toggle="modal" 
                                                                data-bs-target="#cancelModal" 
                                                                data-appointment-id="@appointment.Id"
                                                                data-vehicle-name="@appointment.Vehicle?.Name">
                                                            <i class="bi bi-x me-1"></i>Hủy
                                                        </button>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-calendar-x fs-1 text-muted mb-3"></i>
                            <h5 class="mt-3">Chưa có lịch hẹn nào</h5>
                            <p class="text-muted mb-4">Bạn chưa có lịch hẹn lái thử nào. Hãy đặt lịch hẹn đầu tiên!</p>
                            <a asp-action="BookAppointment" class="btn btn-primary">
                                <i class="bi bi-plus-circle me-2"></i>Đặt lịch hẹn ngay
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal xác nhận hủy lịch hẹn -->
<div class="modal fade" id="cancelModal" tabindex="-1" aria-labelledby="cancelModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="cancelModalLabel">Xác nhận hủy lịch hẹn</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn hủy lịch hẹn lái thử xe <strong id="vehicleName"></strong>?</p>
                <p class="text-muted small">Lưu ý: Sau khi hủy, bạn sẽ không thể hoàn tác hành động này.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                <form id="cancelForm" method="post" asp-action="CancelAppointment" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="appointmentIdInput" name="appointmentId" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-x-circle me-2"></i>Xác nhận hủy
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Handle cancel modal
        var cancelModal = document.getElementById('cancelModal');
        if (cancelModal) {
            cancelModal.addEventListener('show.bs.modal', function (event) {
                var button = event.relatedTarget;
                var appointmentId = button.getAttribute('data-appointment-id');
                var vehicleName = button.getAttribute('data-vehicle-name');
                
                var modalVehicleName = cancelModal.querySelector('#vehicleName');
                var appointmentIdInput = cancelModal.querySelector('#appointmentIdInput');
                
                modalVehicleName.textContent = vehicleName || 'Không xác định';
                appointmentIdInput.value = appointmentId;
            });
        }
    </script>
}